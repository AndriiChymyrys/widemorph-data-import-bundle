{% extends '@MorphView/layout.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Entities</h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>Entity Name</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entityName, entityPath in entities %}
                            <tr>
                                <td>{{ entityName }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('morph_data_import_morph_data_import_entity_import', {'entityName': entityPath}) }}"
                                           class="btn btn-success">Entity Import</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock page_content %}
