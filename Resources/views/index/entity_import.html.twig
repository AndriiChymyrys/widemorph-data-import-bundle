{% extends '@MorphView/layout.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Import Data For Entity <b>{{ entityReflection.namespace }}</b></h3>
                </div>
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <thead>
                        <tr>
                            <th>Entity Field Name</th>
                            <th>Field Description</th>
                            <th>Mapping</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for field in entityReflection.getUiFields %}
                            <tr>
                                <td>{{ field.name }}</td>
                                <td>
                                    {% include '@MorphDataImport/partials/field_view/description/_' ~ field.fieldViewType ~ '.html.twig' with {entityReflection: entityReflection, field: field} %}
                                </td>
                                <td>
                                    {% include '@MorphDataImport/partials/field_view/mapping/_' ~ field.fieldViewType ~ '.html.twig' with {entityReflection: entityReflection, field: field} %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="entity-import">CSV/XLS File</label>
                                <input type="file" class="form-control-file" id="entity-import">
                            </div>
                        </div>
                        <div class="col-6 text-right">
                            <div class="btn-group">
                                <a href="#" class="btn btn-success">Test</a>
                                <a href="#" class="btn btn-warning">Import</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock page_content %}
